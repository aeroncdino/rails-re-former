<h1>Create a New User</h1>

<%= form_with(model: @user, url: users_path) do |form| %>
  <%= form.label :username, "Your username here:" %>
  <%= form.text_field :username, required: true %>

  <%= form.label :email, "Email" %>
  <%= form.email_field :email, required: true, id: "email-field", placeholder: "example@example.com" %>

  <%= form.label :password, "Password" %>
  <%= form.password_field :password, required: true %>

  <%= form.submit "Create User" %>


<script>
  const emailField = document.getElementById("email-field");

  emailField.addEventListener("focus", () => {
    if (emailField.value === "example@example.com") {
      emailField.value = "";
    }
  });

  emailField.addEventListener("blur", () => {
    if (emailField.value === "") {
      emailField.value = "example@example.com";
    }
  });
<% end %>
